<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>@ViewBag.Title</title>
    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <div>
            <a class="navbar-brand" href="#">
                <span class="hidden-xs">ЛоскутОк - с миру по метру</span>
                <div class="visible-xs">Лоскут</div>
                <div class="visible-xs">Ок</div>
            </a>
        </div>
        <div>
            @Html.Action("Summary", "Cart")
        </div>
        <div>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="visible-xs">
        @Html.Action("Menu", "Nav", new { horizontalNav = true })
    </div>
    <div class="row panel">
        <div id="categories" class="col-xs-3 hidden-xs">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-xs-8">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year – ЛоскутОк</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>